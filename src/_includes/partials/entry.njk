<article class="post-entry">
    <header class="entry-header">
        <h2>{{ post.data.title }}</h2>
    </header>
    <div class="entry-content">
        <p>{{ content | safe }}</p>
    </div>
    <footer class="entry-footer">
        <time datetime='{{ post.data.date }}'>{{ post.data.date }}</span>
        {% author_link post.data.author, post.data.author %}
    </footer>
    <a href='{{ post.url }}' class="entry-link"></a>
</article>