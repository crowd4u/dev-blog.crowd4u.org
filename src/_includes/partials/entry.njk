<article class="post-entry">
    <header class="entry-header">
        <h2>{{ post.data.title }}</h2>
    </header>
    <div class="entry-content">
        <p>{{ content | safe }}</p>
    </div>
    <footer class="entry-footer">
        <time datetime='{{ post.data.date.toISOString() }}'>{{ post.data.date | readableDate }}</span>
        <a href="{{ getAuthorLink post.data.author }}">{{ authors[post.data.author]["name"] }}</a>
    </footer>
    <a href='{{ post.url }}' class="entry-link"></a>
</article>