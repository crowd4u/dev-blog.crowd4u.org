<meta property="og:url" content="{{ page.url | htmlBaseUrl }}" />
<meta property="og:type" content="{{ ogp_type | default('article') }}" />
<meta property="og:title" content="{{ title }}" />
<meta property="og:description" content="{{ ogp.description }}" />
<meta property="og:site_name" content="{{ ogp.site_name }}" />
<meta property="og:image" content="{{ ogp.image | htmlBaseUrl}}" />
<meta property="twitter:card" content="summary"/>
