---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
    - tagList
    - post
  addAllPagesToCollections: true
permalink: "/tags/{{ tag | slugify }}/"
layout: base
eleventyComputed:
  title: "タグ「{{ tag }}」を含む記事一覧"
---

<article>
    <h1>タグ「{{ tag }}」を含む記事一覧</h1>
    {% for post in collections[tag] %}
    <article>
        <h2>
            <a href="{{post.url}}">{{ post.data.title }}</a>
        </h2>
        <p>{{ post.data.author }}</p>
    </article>
    {% endfor %}
    <a href='{{ "/tags" | htmlBaseUrl }}'>タグ一覧をみる</a>
</article>
